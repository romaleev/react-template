{
	"name": "react-template",
	"version": "1.0.0",
	"description": "React Template",
	"main": "dist/index.js",
	"private": true,
	"scripts": {
		"start": "vite",
		"build": "tsc -b tsconfig.build.json && vite build",
		"preview": "vite preview",
		"test": "npm-run-all --parallel test:component test:e2e",
		"test:component": "vitest run",
		"test:e2e": "pnpm exec playwright test --project=local",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage --reporter=text",
		"lint": "tsc --noEmit && eslint {src,e2e}/**/*.ts && prettier {src,e2e}/**/*.ts",
		"lint:fix": "tsc --noEmit && eslint --fix {src,e2e}/**/*.ts && prettier --write {src,e2e}/**/*.ts",
		"update": "pnpm add npm-check-updates@latest -D && ncu -u && pnpm i && pnpm audit fix && pnpm lint && pnpm test",
		"prepare": "husky && playwright install"
	},
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/romaleev/react-template.git"
	},
	"type": "module",
	"engines": {
		"node": ">=18.0.0"
	},
	"keywords": [
		"react-template",
		"react",
		"typescript",
		"vite",
		"playwright",
		"i18next"
	],
	"author": "Roman Malieiev <aromaleev@gmail.com>",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/romaleev/react-template/issues"
	},
	"homepage": "https://github.com/romaleev/react-template#readme",
	"dependencies": {
		"@emotion/react": "^11.14.0",
		"@emotion/styled": "^11.14.1",
		"@hookform/resolvers": "^5.1.1",
		"@mui/icons-material": "^7.1.2",
		"@mui/material": "^7.1.2",
		"@tanstack/react-query": "^5.81.5",
		"dotenv": "^17.0.0",
		"i18next": "^25.2.1",
		"ky": "^1.8.1",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"react-hook-form": "^7.59.0",
		"react-i18next": "^15.5.3",
		"react-router-dom": "^7.6.3",
		"zod": "^3.25.67",
		"zustand": "^5.0.6"
	},
	"devDependencies": {
		"@eslint/js": "^9.30.0",
		"@playwright/test": "^1.53.1",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@types/eslint-config-prettier": "^6.11.3",
		"@types/node": "^24.0.7",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.6",
		"@types/react-router-dom": "^5.3.3",
		"@vitejs/plugin-react": "^4.6.0",
		"esbuild": "^0.25.5",
		"eslint": "^9.30.0",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"globals": "^16.2.0",
		"husky": "^9.1.7",
		"jiti": "^2.4.2",
		"jsdom": "^26.1.0",
		"npm-check-updates": "^18.0.1",
		"npm-run-all": "^4.1.5",
		"playwright": "^1.53.1",
		"prettier": "^3.6.2",
		"prettier-eslint": "^16.4.2",
		"prettier-plugin-organize-imports": "^4.1.0",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.35.0",
		"vite": "^7.0.0",
		"vitest": "^3.2.4"
	}
}
